--TABLA QUE ALVERGAR√Å LOS DATOS DEL USUARIO
CREATE OR REPLACE TABLE P_USUARIO(
ID_USUARIO INTEGER NOT NULL,
NOMBRE VARCHAR2(150) NOT NULL,   
APELLIDO_PATERNO  VARCHAR2(150) NOT NULL,
APELLIDO_MATERNO   VARCHAR2(150) NOT NULL,
EMAIL VARCHAR2(255) NOT NULL,
CONTRASENA VARCHAR2(255) NOT NULL,
PERFIL VARCHAR2(150))
--EL PERFIL ES PARA SABER SI ES EL QUE HIZO EL QUIZZ O ES EL QUE LO RESPONDE

CREATE TABLE P_QUIZZ(
ID_QUIZZ INTEGER NOT NULL,  
DESCRIPCION_QUIZZ VARCHAR2(255),
FECHA_CREACION DATE DEFAULT SYSDATE, 
ID_USUARIO INTEGER) --


CREATE TABLE P_QUIZZ_PREGUNTA(
ID_PREGUNTA INTEGER NOT NULL,
PREGUNTA VARCHAR2(255) NOT NULL,     -- CUAL ES LA PREGUNTA
OPCION1_PREG VARCHAR2(255) NOT NULL,  -- LAS OPCIONES QUE PUEDE TENER LE PREGUNTA
OPCION2_PREG VARCHAR2(255) NOT NULL,
OPCION3_PREG VARCHAR2(255) NOT NULL,
OPCION4_PREG VARCHAR2(255) NOT NULL,
RESPUESTA_PREG VARCHAR2(255) NOT NULL,
CALIFICACION INTEGER DEFAULT 10,  --- CAMPO PARA SABER EL VALOR DE LA PREGUNTA DONDE EL VALOR POR DEFAULT VALDRA UN 10
ID_QUIZZ INTEGER NOT NULL)  -- 


--TABLA QUE REGISTRA QUE QUIZZ HACE UN DETERMINADO USUARIO

CREATE TABLE P_USUARIO_QUIZZ(
ID_USUARIO_QUIZZ INTEGER NOT NULL,
ID_USUARIO INTEGER NOT NULL,
ID_QUIZZ INTEGER NOT NULL)


CREATE TABLE P_USUARIO_QUIZZ_PREGUNTA(
ID_USUARIO_QUIZZ_PREGUNTA INTEGER NOT NULL,
ID_USUARIO INTEGER NOT NULL,
ID_PREGUNTA INTEGER NOT NULL,
RESPUESTA INT NOT NULL, --CON ESTO SE CHECA SI LA RESPUESTA ESTA CORRECTA O INCORRECTA
TIEMPO_RESPUESTA DATE DEFAULT SYSDATE
)
